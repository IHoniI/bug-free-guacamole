Whole:

<Whole>:
    orientation: "vertical"


    Label:
        size_hint: 1, .5
        text: root.second
    GridLayout:
        cols: 4
        rows: 4
        Button:
            text: "7"
            on_press: root.seven()
        Button:
            text: "8"
            on_press: root.eight()
        Button:
            text: "9"
            on_press: root.nine()
        Button:
            text: "/"
            on_press: root.podziel()
        Button:
            text: "4"
            on_press: root.four()
        Button:
            text: "5"
            on_press: root.five()
        Button:
            text: "6"
            on_press: root.six()
        Button:
            text: "x"
            on_press: root.multiple()
        Button:
            text: "1"
            on_press: root.one()
        Button:
            text: "2"
            on_press: root.two()
        Button:
            text: "3"
            on_press: root.three()
        Button:
            text: "+"
            on_press: root.dod()
        Button:
            text: "C"
            on_press: root.clear_all()
        Button:
            text: "0"
            on_press: root.zero()
        Button:
            text: ","
            on_press: root.comma()
        Button:
            text: "="
            on_press: root.equal_number()
